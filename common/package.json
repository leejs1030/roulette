{
  "name": "common",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "protoc": "pbjs -t static-module -w commonjs -o src/proto/generated/game-state.js src/proto/game-state.proto && pbts -o src/proto/generated/game-state.d.ts src/proto/generated/game-state.js",
    "prebuild": "mkdir -p src/proto/generated && yarn protoc",
    "build": "tsup src/index.ts --format cjs,esm --dts"
  },
  "dependencies": {
    "@types/protobufjs": "^6.0.0",
    "protobufjs": "^7.5.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "protobufjs-cli": "^1.1.3",
    "protoc-gen-js": "^3.21.4-4",
    "protoc-gen-ts": "^0.8.7"
  }
}
