{
  "extends": "../tsconfig.base.json", // Extend the base configuration
  "compilerOptions": {
    /* Frontend specific options */
    "target": "es2017", // Frontend might need a slightly older target for browser compatibility
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM library for browser environment
    "module": "esnext", // Modern module system for React
    "moduleResolution": "node",
    "jsx": "react-jsx", // Support JSX with React 17+ automatic runtime
    "allowJs": true, // Allow JavaScript files to be compiled
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "isolatedModules": true, // Ensure each file can be safely transpiled

    /* Override base options if necessary */
    // "strict": false, // Example: If frontend needs less strict checks
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"] // Include all TypeScript and TSX files
}
